{
  "name": "blank-ts-repo",
  "version": "0.0.0",
  "private": false,
  "publishConfig": {
    "access": "public"
  },
  "description": "Blank TS repo",
  "source": "src/main/ts/index.ts",
  "main": "target/bundle/blank-ts-repo.js",
  "module": "target/bundle/blank-ts-repo.mjs",
  "unpkg": "target/bundle/blank-ts-repo.umd.js",
  "types": "typings/index.d.ts",
  "typescript": {
    "definition": "typings/index.d.ts"
  },
  "scripts": {
    "lint": "eslint src/**/*.{ts,js}",
    "lint:fix": "yarn lint --fix",
    "jest": "jest -w 1 --config=jest.config.json",
    "test": "yarn lint && yarn jest",
    "clean": "rimraf target typings flow-typed buildcache docs coverage",
    "build": "yarn clean && yarn build:es5 && yarn build:es6 && yarn build:ts && yarn build:libdef && yarn docs && yarn build:bundle",
    "build:es5": "mkdirp target/es5 && tsc -p tsconfig.es5.json",
    "build:es6": "mkdirp target/es6 && tsc -p tsconfig.es6.json",
    "build:ts": "cpy src/main/ts/ target/ts/",
    "build:bundle": "microbundle --tsconfig tsconfig.es5.json build src/main/ts/index.ts -o target/bundle",
    "build:libdef": "libdefkit --tsconfig=tsconfig.es5.json --tsconfig=tsconfig.es6.json",
    "test:report": "yarn test && yarn push:report",
    "push:report": "yarn coveralls:push",
    "coveralls:push": "cat ./coverage/lcov.info | coveralls || exit 0",
    "docs": "typedoc --readme README.md --tsconfig tsconfig.json src/main --ignoreCompilerErrors || exit 0",
    "uglify": "for f in $(find target -name '*.js'); do short=${f%.js}; terser -c -m -o $short.js -- $f; done",
    "postupdate": "yarn && npx yarn-audit-fix --audit-level=moderate && yarn build && yarn test",
    "format": "prettier --write \"src/**/*.ts\""
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/antongolub/blank-ts-repo.git"
  },
  "keywords": [
    "blank-ts-repo"
  ],
  "files": [
    "README.md",
    "CHANGELOG.md",
    "target",
    "typings",
    "flow-typed"
  ],
  "author": "Anton Golub <a.golub@qiwi.com>",
  "license": "MIT",
  "devDependencies": {
    "@qiwi/libdefkit": "^2.1.5",
    "@qiwi/semrel-config": "^1.1.0",
    "@swissquote/crafty-preset-jest": "^1.13.7",
    "@types/jest": "^26.0.17",
    "@types/node": "^14.14.10",
    "coveralls": "^3.1.0",
    "cpy-cli": "^3.1.1",
    "eslint": "^7.15.0",
    "eslint-config-prettier": "^7.0.0",
    "eslint-config-qiwi": "^1.10.0",
    "jest": "^26.6.3",
    "microbundle": "^0.12.4",
    "mkdirp": "^1.0.4",
    "prettier": "^2.2.1",
    "rimraf": "^3.0.2",
    "terser": "^5.5.1",
    "ts-jest": "^26.4.4",
    "typedoc": "^0.19.2",
    "typedoc-plugin-external-module-name": "^4.0.3",
    "typescript": "4.1.2"
  },
  "dependencies": {
    "tslib": "^2.0.3"
  }
}
